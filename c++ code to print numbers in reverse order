#include <iostream>
using namespace std;
int main()
{
    int n,i;
    cout << "Enter a positive integer: ";
    cin >> n;
    if (n <= 0)
    {
       cout << "Please enter a positive integer." << endl;
       return 1; 
    }
cout << "Numbers from "<<n<< "to 1 are: ";
    for (i = n; i >= 1; i--) 
    {
     cout << i << " ";
    }
cout <<endl; 
    return 0; 
}

