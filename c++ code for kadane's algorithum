#include <iostream>
#include <vector>
#include <algorithm> 
int maxSubArraySum(const std::vector<int>& arr) 
{
    if (arr.empty()) 
    {
        return 0; 
    }
    int currentMax = arr[0]; 
    int globalMax = arr[0];  
    for (size_t i = 1; i < arr.size(); ++i) 
    {
        currentMax = std::max(arr[i], currentMax + arr[i]);
        globalMax = std::max(globalMax, currentMax);
    }
    return globalMax;
}
int main() 
{
    std::vector<int> arr1 = {-2, 1, -3, 4, -1, 2, 1, -5, 4};
    std::cout << "Maximum subarray sum for arr1: " << maxSubArraySum(arr1) << std::endl; 
    std::vector<int> arr2 = {1, 2, 3, -2, 5};
    std::cout << "Maximum subarray sum for arr2: " << maxSubArraySum(arr2) << std::endl; 
    std::vector<int> arr3 = {-1, -2, -3, -4};
    std::cout << "Maximum subarray sum for arr3: " << maxSubArraySum(arr3) << std::endl; 
    return 0;
}
