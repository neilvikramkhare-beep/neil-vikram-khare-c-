#include<iostream>
using namespace std;
class SYIT
{
    int roll;
    char name[20];
    public:
    void getdata();
    friend void putdata(SYIT);
}s1;
void SYIT::getdata()
{
    cout<<"enter the name:\n";
    cin>>name;
    cout<<"enter the roll number:\n";
    cin>>roll;
}
void putdata(SYIT s1)
{
    cout<<"\nroll number:"<<s1.roll;
    cout<<"\nname:"<<s1.name;
}
int main()
{
    SYIT s1;
    s1.getdata();
    putdata(s1);
    return 0;
}
