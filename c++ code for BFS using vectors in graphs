#include <iostream>
#include <vector>
#include <queue>
#include <list> 
using namespace std;
class Solution 
{
public:
    vector<int> bfsOfGraph(int V, vector<int> adj[])
    {
        vector<bool> visited(V, false);
        queue<int> q;
        vector<int> bfs_traversal;
        int startNode = 0;
        visited[startNode] = true;
        q.push(startNode);
        while (!q.empty())
        {
            int node = q.front();
            q.pop();
            bfs_traversal.push_back(node);
            for (int neighbor : adj[node]) {
                if (!visited[neighbor]) 
                {
                    visited[neighbor] = true;
                    q.push(neighbor);
                }
            }
        }
        return bfs_traversal;
    }
};
void addEdge(vector<int> adj[], int u, int v)
{
    adj[u].push_back(v);
}
void printAns(vector<int>& ans) 
{
    for (int i = 0; i < ans.size(); i++)
    {
        cout << ans[i] << " ";
    }
    cout << endl;
}
int main()
{
    int V = 5; 
    vector<int> adj[V];
    addEdge(adj, 0, 1);
    addEdge(adj, 0, 2);
    addEdge(adj, 1, 2); 
    addEdge(adj, 2, 0); 
    addEdge(adj, 2, 1); 
    addEdge(adj, 2, 3); 
    addEdge(adj, 2, 4); 
    addEdge(adj, 3, 2); 
    addEdge(adj, 4, 2); 
    Solution obj;
    vector<int> ans = obj.bfsOfGraph(V, adj);
    cout << "BFS Traversal starting from node 0: ";
    printAns(ans);
    return 0;
}
