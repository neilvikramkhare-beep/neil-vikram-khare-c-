#include <iostream>
using namespace std;
class base
{
    public:
    void display()
    {
        cout<<"\n display base.";
    }
    virtual void show()
    {
        cout<<"\nShow base:";
    }
};
class derived:public base
{
    void display()
    {
        cout<<"display derived.";
    }
    void show()
    {
        cout<<"\nshow derived.";
    }
};
int main()
{
   base b;
    derived d;
    base* bptr;
     bptr = &b;
     bptr->display();
    bptr->show();
    bptr = &d;
    bptr->display(); 
    bptr->show();
    return 0;
}
