#include <iostream>
#include <string>
using namespace std;
class Grandparent {
protected:
    string name;
    int age;
public:
    void input() {
        cout << "Enter the name of your grandparent: ";
        cin >> name;
        cout << "Enter the age of your grandparent: ";
        cin >> age;
    }
    void display(){
        cout << "Name: " << name << ", Age: " << age << endl;
    }
};
class Father : public virtual Grandparent {
public:
    void input() {
        cout << "Enter the name of your father: ";
        cin >> name;
        cout << "Enter the age of your father: ";
        cin >> age;
    }
    void display(){
        cout << "Father's Name: " << name << ", Age: " << age << endl;
    }
};
class Mother : public virtual Grandparent {
public:
    void input() {
        cout << "Enter the name of your mother: ";
        cin >> name;
        cout << "Enter the age of your mother: ";
        cin >> age;
    }
    void display(){
        cout << "Mother's Name: " << name << ", Age: " << age << endl;
    }
};
class Child : public Father, public Mother {
public:
    void input() {
        cout << "Enter the name of your child: ";
        cin >> name;
        cout << "Enter the age of your child: ";
        cin >> age;
    }
    void display(){
        cout << "Child's Name: " << name << ", Age: " << age << endl;
    }
};
int main() {
    Grandparent g;
    Father f;
    Mother m;
    Child c;
    cout << "\nEnter Family Details \n";
    g.input();
    f.input();
    m.input();
    c.input();
    cout << "\nFamily Details\n";
    cout << "Grandparent: "; g.display();
    cout << "Father: "; f.display();
    cout << "Mother: "; m.display();
    cout << "Child: "; c.display();
    return 0;
}
