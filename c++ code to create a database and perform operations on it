#include <iostream>
#include <string>
#include <cstdlib>
using namespace std;
class College 
{
public:
    string name;
    int age;
    string post;
    int salary;
    string DOJ;
    College(string n, int a, string p, int s, string doj)
    {
        name = n;
        age = a;
        post = p;
        salary = s;
        DOJ = doj;
    }
};
class Location 
{
public:
    string city;
    string country;
    Location(string cty, string cntry) 
    {
        city = cty;
        country = cntry;
    }
};
class EmployeeDetails
{
public:
    College collegeInfo;
    Location locationInfo;
    EmployeeDetails(College c, Location l) : collegeInfo(c), locationInfo(l) 
    {}
    void printCombinedDetails() 
    {
        cout << collegeInfo.name << " | " << collegeInfo.age << " | " 
             << collegeInfo.post << " | " << collegeInfo.salary << " | " 
            << collegeInfo.DOJ << " | " << locationInfo.city << " | " 
             << locationInfo.country << endl;
    }
};
void callPythonSubprogram()
{
    cout << "\nCalling external Python script using system() call." << endl;
    int systemResult = system("python external_script.py");
    if (systemResult == 0)
    {
        cout << "Python script executed successfully." << endl;
    } 
    else
    {
        cerr << "Failed to execute Python script or script not found." << endl;
    }
}
void callJavaSubprogram() 
{
    cout << "\nCalling external Java script using system() call..." << endl;
    int systemResult = system("java external_script.java");
    if (systemResult == 0) 
    {
        cout << "Java script executed successfully." << endl;
    } 
    else
    {
        cerr << "Failed to execute Java script or script not found." << endl;
    }
}
void callSQLSubprogram() 
{
    cout << "\nCalling external SQL script using system() call..." << endl;
    int systemResult = system("SQL external_script.java");
    if (systemResult == 0) 
    {
        cout << "Java script executed successfully." << endl;
    } 
    else
    {
        cerr << "Failed to execute SQL script or script not found." << endl;
    }
}
int main()
{
    bool isAuthorized = true;
    if (isAuthorized)
    {
        cout << "Access Granted. Displaying Employee Details:" << endl;
        cout << "Name | Age | Post | Salary | DOJ | City | Country" << endl;
        College collegeData[] = {
            College("Suyash", 43, "Admin", 45000, "Monday"),
            College("Amit", 54, "Supervisor", 68000, "Wednesday"),
            College("Pravin", 45, "Staff", 32000, "Saturday"),
            College("Rahul", 32, "Manager", 80000, "Tuesday"),
            College("Amey", 46, "Synchronizer", 64000, "Thursday"),
            College("Aditya", 62, "HOD", 90000, "Monday"),
            College("Shyama", 20, "Clerk", 29000, "Friday"),
            College("Farida", 29, "Advisor", 26000, "Wednesday"),
            College("Mrunal", 72, "Query", 10000, "Thursday"),
            College("Ragini", 38, "Database", 83000, "Saturday")
        };
        Location locationData[] = {
            Location("Pune", "India"),
            Location("Mumbai", "India"),
            Location("Nagpur", "India"),
            Location("Delhi", "India"),
            Location("Bangalore", "India"),
            Location("Chennai", "India"),
            Location("Kolkata", "India"),
            Location("Hyderabad", "India"),
            Location("Ahmedabad", "India"),
            Location("Jaipur", "India")
        };
        const int NUM_EMPLOYEES = 10;
        for (int i = 0; i < NUM_EMPLOYEES; i++) 
        {
            EmployeeDetails emp(collegeData[i], locationData[i]);
            emp.printCombinedDetails();
        }
        callPythonSubprogram();
        callJavaSubprogram();
        callSQLSubprogram();
    } 
    else 
    {
        cout << "Access Revoked. User is not authorized." << endl;
    }
    return 0;
}
