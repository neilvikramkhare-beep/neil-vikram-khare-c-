#include <iostream>
using namespace std;

class school
{
    string name;
    int standard;

public:
    void getdata()
    {
        cout << "\nEnter the name: ";
        cin >> name;
        cout << "Enter the standard: ";
        cin >> standard;
    }
    void display()
    {
        cout << "\nName: " << name << endl;
        cout << "Standard: " << standard << endl;
    }
};

class branch : public school
{
    string place;

public:
    void getdata1()
    {
        cout << "\nEnter place of school: ";
        cin >> place;
    }
    void display2()
    {
        cout << "Place: " << place << endl;
    }
};
class location : public branch
{
    string city;

public:
    void getdata2()
    {
        cout << "\nEnter city name: ";
        cin >> city;
    }
    void display3()
    {
        cout << "City: " << city << endl;
    }
};
int main()
{
    location l;
    l.getdata();  
    l.getdata1(); 
    l.getdata2();  
    cout << "\n School Details:" << endl;
    l.display();  
    l.display2(); 
    l.display3();  
    return 0;
}
