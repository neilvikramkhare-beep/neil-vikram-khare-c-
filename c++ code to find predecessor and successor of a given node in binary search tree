#include <vector>
#include <iostream> 
class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int d) {
        data = d;
        left = nullptr;
        right = nullptr;
    }
};
class Solution {
public:
    Node* pre(Node* root, int x) {
        Node* predecessor = nullptr;
        while (root != nullptr) {
            if (root->data >= x) { 
                root = root->left;
            } else { 
                predecessor = root;
                root = root->right;
            }
        }
        return predecessor;
    }
    Node* suc(Node* root, int x) {
        Node* successor = nullptr;
        while (root != nullptr) {
            if (root->data <= x) { 
                root = root->right;
            } else { 
                successor = root;
                root = root->left;
            }
        }
        return successor;
    }
    std::vector<Node*> findPreSuc(Node* root, int key) {
        std::vector<Node*> ans;
        Node* pred = pre(root, key);
        Node* succ = suc(root, key);
        ans.push_back(pred);
        ans.push_back(succ);
        return ans;
    }
};
Node* insert(Node* root, int data) {
    if (root == nullptr) {
        return new Node(data);
    }
    if (data < root->data) {
        root->left = insert(root->left, data);
    } else if (data > root->data) {
        root->right = insert(root->right, data);
    }
    return root;
}
int main() {
    Node* root = nullptr;
    root = insert(root, 50);
    root = insert(root, 30);
    root = insert(root, 20);
    root = insert(root, 40);
    root = insert(root, 70);
    root = insert(root, 60);
    root = insert(root, 80);
    Solution sol;
    int key = 65;
    std::vector<Node*> result = sol.findPreSuc(root, key);
    if (result[0]) {
        std::cout << "Predecessor of " << key << ": " << result[0]->data << std::endl;
    } else {
        std::cout << "No predecessor for " << key << std::endl;
    }
    if (result[1]) {
        std::cout << "Successor of " << key << ": " << result[1]->data << std::endl;
    } else {
        std::cout << "No successor for " << key << std::endl;
    }
    return 0;
}
