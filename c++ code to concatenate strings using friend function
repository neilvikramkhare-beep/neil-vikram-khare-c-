#include<iostream>
#include<string.h>
using namespace std;
class String 
{
private:
    char name[20];
public:
    void getdata() {
        cout << "enter a string: ";
        cin >> name; 
    }
    void displaydata() 
    {
        cout << "concatenated string: " << name; 
    }
    friend void operator+(String& s1, String& s2);
};
void operator+(String& s1, String& s2)
{
    strcat(s1.name, s2.name);
}
int main()
{ 
    String s1, s2;
    s1.getdata();
    s2.getdata();
    s1 + s2; 
    s1.displaydata(); 
    return 0;
}
