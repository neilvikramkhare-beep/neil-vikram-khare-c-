#include <iostream>
using namespace std;
class Bank 
{
protected:
    int accountNumber;
    int balance;
    string card; 
public:
    void getBankDetails() 
    {
        cout << "Enter account number: ";
        cin >> accountNumber;
        cout << "Enter account balance: ";
        cin >> balance;
        cout << "Enter card type: ";
        cin >> card;
    }
    void displayBankDetails() 
    {
        cout << "Account Number: " << accountNumber << endl;
        cout << "Account Balance: " << balance << endl;
        cout << "Card Type: " << card << endl;
    }
};
class Department : public Bank
{
public:
    void getCustomerDetails() 
    {
        int age;
        int salary;
        string name;
        cout << "Enter the age: ";
        cin >> age;
        cout << "Enter the salary: ";
        cin >> salary;
        cout << "Enter the name: ";
        cin >> name;
        cout << "Customer Details:" << endl;
        cout << "Age: " << age << endl;
        cout << "Salary: " << salary << endl;
        cout << "Name: " << name << endl;
    }
    public:
    void displayCustomer() 
    {
        string location;
        string country;
        int deptno;
        cout <<"Displaying Department and Customer Information." << endl;
        cout<<"Enter your city name:"<<endl;
        cin>>location;
        cout<<"Enter the country where you stay:";
        cin>>country;
        cout<<"Enter the department number:";
        cin>>deptno;
        cout<<"City:"<<location<<endl;
        cout<<"Country:"<<country<<endl;
        cout<<"DeptNo"<<deptno<<endl;
    }
};
int main()
{
    Bank b;
    cout << "Bank Details" << endl;
    b.getBankDetails();
    b.displayBankDetails();
    Department d;
    cout << "\nCustomer Details" << endl;
    d.getCustomerDetails();
    d.displayCustomerData(); 
    return 0;
}
