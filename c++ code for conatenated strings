#include <iostream>
#include <cstring> 
#include <string>  
using namespace std;
class String
{
public:
    char name[40]; 

public:
    void getdata()
    {
        cout << "Enter a string: ";
        cin >> name; 
    }
    void operator+(String s2)
    {
        strcat(name, s2.name); 
    }
    void displaydata()
    {
        cout << "Concatenated string: " << name << endl;
    }
};

int main() 
{
    String s1, s2;
    s1.getdata();
    s2.getdata();
    s1 + s2; 
    s1.displaydata(); 
    return 0;
}
