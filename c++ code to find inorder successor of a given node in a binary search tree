#include <bits/stdc++.h>
using namespace std;
struct Node 
{
    int data;
    Node *left, *right;
    Node(int val)
    {
        data = val;
        left = right = NULL;
    }
};
class Solution
{
public:
    int inOrderSuccessor(Node *root, Node *x) {
        Node* successor = NULL;
        if (x->right != NULL) {
            Node* curr = x->right;
            while (curr->left != NULL)
                curr = curr->left;
            return curr->data;
        }
        Node* curr = root;
        while (curr != NULL) {
            if (x->data < curr->data) {
                successor = curr;
                curr = curr->left;
            }
            else if (x->data > curr->data) {
                curr = curr->right;
            }
            else break;
        }
        if (successor) return successor->data;
        return -1;
    }
};
Node* insert(Node* root, int key) {
    if (!root) return new Node(key);
    if (key < root->data)
        root->left = insert(root->left, key);
    else
        root->right = insert(root->right, key);
    return root;
}
int main() 
{
    Node* root = NULL;
    int arr[] = {20, 8, 22, 4, 12};
    for (int x : arr)
        root = insert(root, x);
    Solution sol;
    Node* x = root->left;  
    cout << "Inorder successor of " << x->data << " is "
         << sol.inOrderSuccessor(root, x);
    return 0;
}
