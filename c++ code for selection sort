#include <iostream> 
void swap(int* xp, int* yp)
{
    int temp = *xp;
    *xp = *yp;
    *yp = temp;
}
void selectionSort(int a[], int n) 
{
    int i, j, minindex;
    for (i = 0; i < n - 1; i++) 
    {
        minindex = i;
        for (j = i + 1; j < n; j++) 
        {
            if (a[j] < a[minindex]) 
            {
                minindex = j;
            }
        }
        swap(&a[minindex], &a[i]);
    }
}
void printArray(int a[], int size) 
{
    for (int i = 0; i < size; i++)
    {
        std::cout << a[i] << " ";
    }
    std::cout << std::endl;
}
int main()
{
    int a[] = {64, 25, 12, 22, 11}; 
    int n = sizeof(a) / sizeof(a[0]); 
    std::cout << "Original array: ";
    printArray(a, n);
    selectionSort(a, n); 
    std::cout << "Sorted array: ";
    printArray(a, n);
    return 0;
}
