#include <iostream>
using namespace std;
class clinic
{
    string name;
    int age;
    string qualification;
public:
    void getdata()
    {
        cout << "\nEnter the name: ";
        cin >> name;
        cout << "Enter the age of the staff: ";
        cin >> age;
        cout<<"Enter the staff's qualification:";
        cin>>qualification;
    }
    void display()
    {
        cout << "\nName|" << name <<"\tAge|" << age << "\tQualification|"<<qualification<<endl;
    }
};
class employee : public clinic
{
    string designation;
    string degree;
public:
    void getdata1()
    {
        cout << "\nEnter designation of the employee: ";
        cin >> designation;
        cout<<"Enter the degree of the staff:";
        cin>>degree;
    }
    void display1()
    {
        cout << "\nDesignation| " << designation << "\tDegree| " << degree<<endl;
    }
};
class location : public employee
{
    string city;
    string country;
    string taluka;
    int pincode;
public:
    void getdata2()
    {
        cout << "\nEnter city name: ";
        cin >> city;
        cout << "\nEnter country name: ";
        cin >> country;
        cout << "\nEnter taluka name: ";
        cin >> taluka;
        cout << "\nEnter the pincode: ";
        cin >> pincode;
    }
    void display2()
    {
        cout << "\nCity| " << city << "\tCountry| " << country<< "\tTaluka| " << taluka << "\tPincode| " << pincode << endl;
    }
};
int main()
{
    location l;
     for(int i=0;i<5;i++)
    l.getdata();  
    for(int i=0;i<5;i++)
    l.getdata1(); 
     for(int i=0;i<5;i++)
    l.getdata2();  
     for(int i=0;i<5;i++)
    cout << "\n Clinic Details:" << endl;
     for(int i=0;i<5;i++)
    l.display();  
     for(int i=0;i<5;i++)
    l.display1(); 
     for(int i=0;i<5;i++)
    l.display2();  
    return 0;
}
