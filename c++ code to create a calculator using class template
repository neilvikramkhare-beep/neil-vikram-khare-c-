#include <iostream>
using namespace std;
template<class T>
class Calculator
{
    private:
    T num1;
    T num2;
    public:
    Calculator(T n1,T n2):num1(n1),num2(n2)
    {}
    T add()
    {
        return num1+num2;
    }
    T substract()
    {
        return num1-num2;
    }
    T multiply()
    {
        return num1*num2;
    }
    T divide()
    {
        if(num2==0)
        {
            cout<<"No answer."<<endl;
            return 0;
        }
            else
        return num1/num2;
    }
    void displayResult()
    {
        cout<<"numbers:"<<num1<<num2<<endl;
        cout<<"addition:"<<add()<<endl;
        cout<<"substraction:"<<substract()<<endl;
        cout<<"multiplication:"<<multiply()<<endl;
        cout<<"division:"<<divide()<<endl;
    }
};
int main()
{
    Calculator<int>intCalc(65,54);
    Calculator<float>floatCalc(5.412,5.654);
    Calculator<double>doubleCalc(54.32,87.54);
    cout<<"Integer results:"<<endl;
    intCalc.displayResult();
    cout<<"Float results:"<<endl;
    intCalc.displayResult();
    cout<<"Double results:"<<endl;
    doubleCalc.displayResult();
    return 0;
}
