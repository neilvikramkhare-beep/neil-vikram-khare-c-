#include<iostream>
using namespace std;
class Node{
public:
int value;
Node* next;
Node(int data){
value=data;
next=nullptr;
 }
};
int main(){
Node* node1=new Node(21);
Node* node2=new Node(19);
Node* node3=new Node(100);
cout<<node1<<""<<node2<<""<<node3<<endl;
cout<<node1->next<<" "<<node2->next<<" "<<node3->next<<endl;
node1->next=node2;
node2->next=node3;
cout<<node1->next<<" "<<node2->next<<" "<<node3->next<<endl;
for(Node* i=node1;i!=nullptr;i=1->next)
{
    cout<<i->value<<"";
}
return 0;
}

